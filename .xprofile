#!/usr/bin/env sh

# Make caps act as Escape and set the french layout
setxkbmap -option caps:escape && setxkbmap -layout fr & # Set keyboard layout
nm-applet &
sudo chown moadalami /sys/class/backlight/intel_backlight/brightness &
xrdb -merge $HOME/.Xresources
dunst & # Notification 
picom & # Transparency
$HOME/github/dwm-bar/dwm-bar &
# Mount C drive
sudo mount /dev/sda2 $HOME/Drives/C -o dmask=022,fmask=133,rw
# Mount D drive
sudo mount /dev/sdb1 $HOME/Drives/D -o dmask=022,fmask=133,rw
