#!/usr/bin/env sh

# Time adjustment
sudo ntpd -qg
# Make caps act as Escape and set the french layout
setxkbmap -option caps:escape && setxkbmap -layout fr & # Set keyboard layout
nm-applet &
xrdb -merge $HOME/.Xresources
dunst & # Notification 
picom & # Transparency
$HOME/github/dwm-bar/dwm-bar &
# Change ownership of the brightness file
sudo chown moadalami /sys/class/backlight/intel_backlight/brightness &
# Mount C drive
sudo mount /dev/sda2 $HOME/Drives/C -o umask=022
# Mount D drive
sudo mount /dev/sdb1 $HOME/Drives/D -o umask=022
